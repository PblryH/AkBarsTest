<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="pro.rgun.akbarstest">

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.screen.notes_list.NotesListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.screen.note_detail.NoteDetailActivity">
        </activity>
        <receiver android:name=".sms.SmsReceiver">
            <intent-filter android:priority="100">
                <action android:name="android.provider.Telephony.SMS_RECEIVED"/>
            </intent-filter>
        </receiver>
        <service android:name=".sms.SmsService"/>
        <activity
            android:name=".ui.screen.auth.AuthActivity"
            android:configChanges="keyboardHidden|orientation|layoutDirection"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible">
            <intent-filter>
                <data android:scheme="vk3974615"/>

                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.vk.sdk.VKOpenAuthActivity"
            android:configChanges="keyboardHidden|orientation|layoutDirection"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.vk.sdk.VKServiceActivity"
            android:configChanges="keyboardHidden|orientation|layoutDirection"
            android:label="ServiceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/VK.Transparent"/>
    </application>

</manifest>